@model Blogosphere.Web.Models.DTOs.EditTagRequest
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container  d-sm-inline-flex justify-content-start">
        <h1>Edit Tag - Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
@if (Model != null)
{
    

    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input class="form-control" type="text" readonly asp-for="Id" id="id" />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input class="form-control" type="text" asp-for="Name" id="name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input class="form-control" type="text" asp-for="DisplayName" id="displayName" />
        </div>
        <div class="mb-3">
            <div class="d-flex">

            <button class="btn btn-dark " type="submit">Update</button>
            <button class="btn btn-danger ms-2" asp-area="" asp-controller="AdminTags" asp-action="Delete" type="submit">Delete</button>
            </div>
        </div>
    </form>
    }else{<p>Tag Not Found....!</p>}
</div>