@model List<Blogosphere.Web.Models.Domain.Tag>

<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container  d-sm-inline-flex justify-content-start">
        <h1>Add New Tag - Admin Functionality</h1>
    </div>
</div>

<div class="container py-5">
    @if (Model != null && Model.Any())
    {
        <table class="table table-striped table-active table-hover">
            <thead>
                <tr>
                <th>Tag Id</th>
                <th>Tag Name</th>
                 <th>Display Name</th>
                 <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach(var tag in Model)
                {
                    <tr>
                        <td>@tag.Id</td>
                        <td>@tag.Name</td>
                        <td>@tag.DisplayName</td>
                        <td><a asp-area="" asp-action="Edit" asp-controller="AdminTags" asp-route-id="@tag.Id">Delete/Edit</a></td>
                    </tr>
                }
            </tbody>
        </table>

    }
    else
    {
        <p>No Tags were Found..!!</p>
    }
</div>